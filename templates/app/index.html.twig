{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
    {% set food = [
        {   name: 'fruits', children: [{name: 'apple'},{name:'banana'}]
        },
        {   name: 'veggies',
            children: [
            {name: 'peas'},
            {name: 'carrots'}
        ]
        }
    ] %}
    <h1>Food Tree</h1>
    {% tree item in food %}
        {% if treeloop.first %}<ul>{% endif %}
        <li>
            {{ item.name }}
            {% subtree item.children|default([]) %}
        </li>
        {% if treeloop.last %}</ul>{% endif %}
    {% endtree %}

{% endblock %}
